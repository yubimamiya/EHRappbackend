{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Virtual Card",
  "type": "object",
  "properties": {
    "Payer Name": {
      "type": "string"
    },
    "Receiver Name": {
      "type": "string"
    },
    "Monetary Card Value": {
      "type": "number"
    },
    "Card Number": {
      "type": "number"
    },
    "CVV Code": {
      "type": "integer"
    },
    "Expiration Date": {
      "type": "string"
    },
    "Page Number": {
      "type": "integer"
    }
},
  "required": ["Payer Name", "Receiver Name", "Monetary Card Value", "Card Number", "CVV Code", "Expiration Date", "Page Number"]
}